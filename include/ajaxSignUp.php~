<?php

include "UserClass.php";

global $db;

$name = $db->escape_string(htmlspecialchars($_POST["username"]);
$pass = $db->escape_string(htmlspecialchars($_POST["password"]);
$email = $db->escape_string(htmlspecialchars($_POST["email"]);
$info = $db->escape_string(htmlspecialchars($_POST["info"]);
$gender = $db->escape_string(htmlspecialchars($_POST["gender"]);

$ret = false;
$curUser = new User;

if (User::newuser($name,$pass,$email,$info,$gender)) {
    $ret = true;
    $curUser->login($name,$pass);
}

echo json_encode(array(
        "result" => $ret,
        "info" => $curUser->getUserinfo
    ));

